# QAToolBox 生产环境配置
# 阿里云部署配置

# Django 基础配置
DJANGO_SECRET_KEY=your-super-secret-key-change-this-in-production
DJANGO_DEBUG=False
DJANGO_SETTINGS_MODULE=config.settings.production

# 数据库配置
DB_NAME=qatoolbox_production
DB_USER=qatoolbox
DB_PASSWORD=your-database-password-here
DB_HOST=db
DB_PORT=5432

# Redis配置
REDIS_PASSWORD=your-redis-password-here
REDIS_URL=redis://:your-redis-password-here@redis:6379/0

# 第三方API配置
DEEPSEEK_API_KEY=your-deepseek-api-key
GOOGLE_API_KEY=your-google-api-key
GOOGLE_CSE_ID=your-google-custom-search-engine-id
OPENWEATHER_API_KEY=your-openweather-api-key

# 邮件配置
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@shenyiqing.xin

# 安全配置
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# 允许的主机
ALLOWED_HOSTS=47.103.143.152,shenyiqing.xin,www.shenyiqing.xin,localhost,127.0.0.1

# 文件上传配置
DATA_UPLOAD_MAX_MEMORY_SIZE=104857600
FILE_UPLOAD_MAX_MEMORY_SIZE=104857600
MAX_UPLOAD_SIZE=104857600

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/django.log

# 缓存配置
CACHE_BACKEND=django_redis.cache.RedisCache
CACHE_LOCATION=redis://:your-redis-password-here@redis:6379/1

# 会话配置
SESSION_ENGINE=django.contrib.sessions.backends.cache
SESSION_CACHE_ALIAS=default
SESSION_COOKIE_AGE=1209600

# 静态文件配置
STATIC_URL=/static/
MEDIA_URL=/media/

# CORS配置
CORS_ALLOWED_ORIGINS=https://shenyiqing.xin,https://www.shenyiqing.xin
CORS_ALLOW_CREDENTIALS=True

# API限制配置
API_RATE_LIMIT_ANON=1000
API_RATE_LIMIT_USER=10000

# Celery配置
CELERY_BROKER_URL=redis://:your-redis-password-here@redis:6379/2
CELERY_RESULT_BACKEND=redis://:your-redis-password-here@redis:6379/2
CELERY_TASK_ALWAYS_EAGER=False

# 社交媒体API配置
XIAOHONGSHU_API_KEY=your-xiaohongshu-api-key
DOUYIN_API_KEY=your-douyin-api-key
NETEASE_API_KEY=your-netease-api-key
WEIBO_API_KEY=your-weibo-api-key
BILIBILI_API_KEY=your-bilibili-api-key
ZHIHU_API_KEY=your-zhihu-api-key
