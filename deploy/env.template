# QAToolBox 环境配置模板
# 复制此文件为 .env 并根据实际情况修改配置

# ===== Django核心配置 =====
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
DJANGO_SETTINGS_MODULE=config.settings.production

# ===== 允许的主机 =====
# 多个主机用逗号分隔，如: localhost,127.0.0.1,yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# ===== 数据库配置 =====
DB_NAME=qatoolbox
DB_USER=qatoolbox
DB_PASSWORD=your-secure-password-here
DB_HOST=localhost
DB_PORT=5432

# ===== Redis配置 =====
REDIS_URL=redis://localhost:6379/0

# ===== 邮件配置 =====
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=your-email@gmail.com

# ===== API密钥配置 =====
# DeepSeek AI API
DEEPSEEK_API_KEY=sk-your-deepseek-api-key

# 高德地图API
AMAP_API_KEY=your-amap-api-key

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key

# Google API
GOOGLE_API_KEY=your-google-api-key

# 图片API密钥
PEXELS_API_KEY=your-pexels-api-key
PIXABAY_API_KEY=your-pixabay-api-key
UNSPLASH_API_KEY=your-unsplash-api-key

# 社交媒体API
XIAOHONGSHU_API_KEY=your-xiaohongshu-api-key
DOUYIN_API_KEY=your-douyin-api-key
WEIBO_API_KEY=your-weibo-api-key
BILIBILI_API_KEY=your-bilibili-api-key
ZHIHU_API_KEY=your-zhihu-api-key

# 音乐API
NETEASE_API_KEY=your-netease-api-key

# ===== 监控配置 =====
# Sentry错误监控（可选）
SENTRY_DSN=your-sentry-dsn-here

# ===== 安全配置 =====
# HTTPS配置（生产环境建议启用）
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# ===== 其他配置 =====
TIME_ZONE=Asia/Shanghai
LANGUAGE_CODE=zh-hans

# 文件上传配置
MAX_UPLOAD_SIZE=104857600  # 100MB

# 缓存配置
CACHE_TIMEOUT=3600  # 1小时

# 日志级别
LOG_LEVEL=INFO
