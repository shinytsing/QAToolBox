# QAToolBox 环境配置模板
# 复制此文件为 .env.production 并填写实际值

# ================================
# Django 基础配置
# ================================
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=your-server-ip,your-domain.com,localhost,127.0.0.1

# ================================
# 数据库配置
# ================================
DB_PASSWORD=your-database-password
DATABASE_URL=postgresql://qatoolbox:${DB_PASSWORD}@db:5432/qatoolbox

# ================================
# Redis 配置
# ================================
REDIS_URL=redis://redis:6379/0

# ================================
# Django 设置模块
# ================================
DJANGO_SETTINGS_MODULE=config.settings.production

# ================================
# 邮件配置 (可选)
# ================================
EMAIL_HOST=smtp.aliyun.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=your-email@example.com

# ================================
# 文件存储配置 (可选)
# ================================
# 阿里云OSS配置
ALIYUN_OSS_ACCESS_KEY_ID=your-oss-access-key
ALIYUN_OSS_ACCESS_KEY_SECRET=your-oss-secret-key
ALIYUN_OSS_BUCKET_NAME=your-bucket-name
ALIYUN_OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com

# ================================
# 安全配置
# ================================
SECURE_SSL_REDIRECT=False
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
CSRF_TRUSTED_ORIGINS=https://your-domain.com,http://your-server-ip

# ================================
# 日志配置
# ================================
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs/django.log

# ================================
# 缓存配置
# ================================
CACHE_TTL=300

