/* pages/index/index.wxss */

.user-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 8rpx;
}

.user-email {
  font-size: 24rpx;
  color: #909399;
}

.stats-refresh {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #409eff;
  font-size: 24rpx;
}

.refresh-icon {
  font-size: 24rpx;
}

.card-more {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #409eff;
  font-size: 24rpx;
}

.list-item-time {
  font-size: 20rpx;
  color: #c0c4cc;
  margin-top: 4rpx;
}

.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #909399;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 24rpx;
  opacity: 0.8;
}
